{
  "name": "ecommerce-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Scalable e-commerce platform with microservices architecture",
  "scripts": {
    "dev": "nx run-many --target=serve --projects=storefront,bff --parallel",
    "dev:all": "docker-compose up -d && nx run-many --target=serve --all --parallel",
    "dev:services": "nx run-many --target=serve --projects=catalog,order,payment,email,shipping,review,loyalty,search,chat --parallel",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "test:e2e": "nx run-many --target=e2e --all",
    "lint": "nx run-many --target=lint --all",
    "format": "nx format:write",
    "graph": "nx graph",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint",
    "reset": "nx reset",
    "docker:build": "docker-compose -f ops/docker/docker-compose.dev.yml build",
    "docker:up": "docker-compose -f ops/docker/docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f ops/docker/docker-compose.dev.yml down",
    "k8s:deploy": "helm upgrade --install ecommerce ops/helm/ecommerce",
    "migration:generate": "nx run-many --target=migration:generate --all",
    "migration:run": "nx run-many --target=migration:run --all"
  },
  "devDependencies": {
    "@nx/eslint": "18.0.4",
    "@nx/eslint-plugin": "18.0.4",
    "@nx/jest": "18.0.4",
    "@nx/js": "18.0.4",
    "@nx/nest": "18.0.4",
    "@nx/next": "18.0.4",
    "@nx/node": "18.0.4",
    "@nx/react": "18.0.4",
    "@nx/webpack": "18.0.4",
    "@nx/workspace": "18.0.4",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.17",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "nx": "18.0.4",
    "prettier": "3.2.5",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
