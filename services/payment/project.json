{
  "name": "payment",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "services/payment/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/services/payment",
        "main": "services/payment/src/main.ts",
        "tsConfig": "services/payment/tsconfig.app.json",
        "assets": ["services/payment/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "payment:build",
        "port": 5003
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["services/payment/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "services/payment/jest.config.ts"
      }
    }
  },
  "tags": ["scope:payment", "type:service"]
}